<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".ChangePinActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:src="@drawable/pin_code" />

    <EditText
        android:id="@+id/prev_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Previous Pin"
        android:inputType="number" />

    <EditText
        android:id="@+id/new_pin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Pin"
        android:inputType="number" />

    <EditText
        android:id="@+id/new_pin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm New Pin"
        android:inputType="number" />

    <TextView
        android:id="@+id/error_change_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="some error!!"
        android:textColor="#e12016" />

    <Button
        android:id="@+id/bt_change_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:text="Change" />

</LinearLayout>