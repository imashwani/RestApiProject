<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendCoinFragment">

    <TextView
        android:id="@+id/receiver_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="Sanju"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/receiver_phone_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:padding="8dp"
        android:text="95685 565 55"
        android:textStyle="bold"
        android:typeface="monospace" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/coins_to_Send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Coins to Transfer"
            android:inputType="number"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#deb53d"
            android:textStyle="bold" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/send_coin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/rounder_corner_bg"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="Send Coins" />

</LinearLayout>