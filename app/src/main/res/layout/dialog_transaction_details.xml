<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/coins_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="200 coins"
        android:textColor="#c1c462"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sent Successfully to" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/receiver_name_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="Sanju"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView

            android:id="@+id/receiver_phone_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="987654123"
            android:textStyle="bold"
            android:typeface="serif" />

    </LinearLayout>


    <TextView
        android:id="@+id/time_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time : " />

</LinearLayout>